@model Cafe.Entity.Concretes.Employee

@{
    Layout = null;
}


@using (Html.BeginForm("AdminLogin", "Account", FormMethod.Post))
{
    <!DOCTYPE html>
    <html>
    <head>
        <link href="~/Content/all.css" rel="stylesheet" />
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <style>
            .login-container {
                margin-top: 5%;
                margin-bottom: 5%;
            }

            .login-form-1 {
                padding: 5%;
                box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
            }

                .login-form-1 h3 {
                    margin-bottom: 8%;
                    text-align: center;
                    color: #333;
                }

            .login-container form {
                padding: 10%;
            }

            .btnSubmit {
                width: 50%;
                border-radius: 1rem;
                padding: 1.5%;
                border: none;
                cursor: pointer;
            }

            .login-form-1 .btnSubmit {
                font-weight: 600;
                color: #fff;
                background-color: #0062cc;
            }

            .login-form-1 .ForgetPwd {
                color: #0062cc;
                font-weight: 600;
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <div class="container login-container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 login-form-1">
                    <h3>Admin Login</h3>
                    <form>
                        <div>
                            @if (TempData["message"] != null)
                            {
                                <div class="alert alert-danger">@TempData["message"]</div>
                            }
                        </div>
                        <div class="form-group">   
                            <div class="input-group">   
                                <div>
                                    <i class="fas fa-user fa-2x" style="margin:10px; margin-right: 15px; margin-left:15px;"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="Your User Name *" name="UserName" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div>
                                    <i class="fas fa-key fa-2x" style="margin:10px; margin-right: 11px; margin-left:15px;"></i>
                                </div>
                                <input type="password" class="form-control" placeholder="Your Password *" name="Password" />
                            </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnSubmit" value="Login" />
                            </div>
                            <div class="form-group">
                                <a href="~/Account/ForgetPassword" class="ForgetPwd">Forget Password?</a>
                            </div>
</form>
                </div>
            </div>
        </div>
    </body>
</html>

}